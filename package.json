{
  "name": "prpal",
  "version": "1.0.0",
  "description": "PRPal - Your AI-powered PR review companion for macOS",
  "main": "dist/electron.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:electron": "npm run build && electron dist/electron.js",
    "build": "tsc && npm run copy:assets",
    "copy:assets": "cp -r src/renderer dist/ && cp src/menubar/preload.cjs dist/menubar/",
    "start": "node dist/index.js",
    "start:electron": "electron dist/electron.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "github",
    "pull-request",
    "review",
    "macos",
    "menubar",
    "opencode",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^9.0.0",
    "electron": "^34.5.8",
    "fastify": "^5.7.2",
    "menubar": "^9.5.2",
    "node-notifier": "^10.0.1",
    "ofetch": "^1.5.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "msw": "^2.12.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.prpal.app",
    "productName": "PRPal",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ]
  }
}
